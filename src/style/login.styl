.login-bar {
  position: absolute;
  bottom: 150px;
  width: 100%;
  height: 50px;
  padding: 20px;
  color: #fff;
  text-align: center;
  font-size: 20px;
}

.buttons-container {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 150px;
  padding: 10px;
  border: 0;
}

.button {
  width: 100px;
  height: 20px;
  margin: 20px;
  background: transparent;
  color: #fff;
}

.button-facebook {
  left: 50%;
  margin-left: -120px;
}

.button-googleplus {
  left: 50%;
  margin-left: 20px;
}

.background-img {
  width: 100%;
  height: 100%;
	margin: 0;
	background-image: url("/images/1.jpg");
  background-repeat: no-repeat;
  background-position: center top;
	position: fixed;
	-webkit-animation-name: bg-sw;
	-webkit-animation-duration: 20s;
	-webkit-animation-iteration-count: 100000;
}

@-webkit-keyframes bg-sw {
	50% {
		background-image: url('/images/2.jpg');
	}
}

#canvas {
  position: absolute;
  top: 0px;
  left: 0px;
}
